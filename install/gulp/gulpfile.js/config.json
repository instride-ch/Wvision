{
  "root": {
    "src": "./website",
    "dest": "./static/website",
    "vendor": "./node_modules",
    "domain": "domain.com"
  },
  "plugins": {
    "css": {
      "src": "./plugins/**/static/scss",
      "extensions": [
        "sass",
        "scss",
        "css"
      ]
    },
    "js": {
      "src": "./plugins/**/static/js/frontend",
      "extensions": [
        "js",
        "json"
      ],
      "entries": {
        "app": [
          "./app.js"
        ]
      }
    }
  },
  "tasks": {
    "browserSync": {
      "https": false,
      "notify": true,
      "port": 3001
    },
    "favicon": {
      "src": "/static/img/ico",
      "dest": "img/ico",
      "ios": {
          "background": "#ffffff"
      },
      "windows": {
          "background": "#0075bf"
      },
      "androidChrome": {
          "themeColor": "#ffffff",
          "name": "Pimcore"
      },
      "safariPinnedTab": {
          "themeColor": "#0075bf"
      }
    },
    "js": {
      "src": "static/js",
      "dest": "js",
      "entries": {
        "site": ["./site.js"]
      },
      "extensions": [
        "js",
        "json"
      ],
      "babel": {
        "presets": [
          "es2015",
          "stage-1"
        ],
        "plugins": []
      },
      "extractSharedJs": false,
      "aliases" : {}
    },
    "css": {
      "src": "/static/scss",
      "dest": "css",
      "autoprefixer": {
        "browsers": [
          "last 3 versions"
        ]
      },
      "purify": "./website/views/**/src/*.php, ./static/**/*.js",
      "sass": {
        "includePaths": [
          "./node_modules/bootstrap-sass/assets/stylesheets",
          "./node_modules/uikit/src/scss",
          "./node_modules/breakpoint-sass/stylesheets",
          "./node_modules/foundation-emails/scss"
        ]
      },
      "extensions": [
        "sass",
        "scss",
        "css"
      ]
    },
    "images": {
      "src": "/static/img",
      "dest": "img",
      "extensions": [
        "jpg",
        "png",
        "svg",
        "gif"
      ]
    },
    "fonts": {
      "src": "/static/fonts",
      "dest": "fonts",
      "vendors": {
        "bootstrap": "/bootstrap-sass/assets/fonts/bootstrap/*",
        "fontAwesome": "/font-awesome/fonts/*"
      },
      "extensions": [
        "woff2",
        "woff",
        "eot",
        "ttf",
        "svg"
      ]
    },
    "svgSprite": {
      "src": "/static/img/icons",
      "dest": "img/sprites",
      "extensions": [
        "svg"
      ]
    }
  }
}
